                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox>aa</TextBox>
                </Grid>
            </TabItem>
            <TabItem Header="친구">
                <Grid Margin="5">
